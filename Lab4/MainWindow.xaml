<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WpfUI.MainWindow" Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Content="Calculate" Click="Calculate_Button_Click" Margin="10,10" Height="30" HorizontalAlignment="Left"/>
        <Button Content="New root" Click="New_Root_Button_Click" Margin="10,0" Height="30" HorizontalAlignment="Left"/>
        <Label Content="Roots:"/>
        <ItemsControl Name="lstRoots">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.ColumnSpan="2" Height="30">
                        <Label Content="Root:" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Value}" Width="64" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBox Name="SumText" Text="Sum here"/>
    </StackPanel>
</Window>